<Window x:Class="WindowsGamePatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abydos Game Patcher" Height="360" Width="535" MinHeight="360" MinWidth="535" MaxHeight="360" MaxWidth="535">
    <Grid>
        <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Content="Launch" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75" Name="btn_Launch" Click="btn_Launch_Click"/>
            <ProgressBar HorizontalAlignment="Left" Height="20" Margin="10,5,0,0" VerticalAlignment="Top" Width="303" Name="prgs_Download"/>
            <TextBlock Name="txt_Status" Text="Checking Version" Margin="10,5,0,0" ></TextBlock>
        </StackPanel>
        <Image Source="Abydos.jpg" Margin="0,0,0,0"></Image>
        </StackPanel>

    </Grid>
</Window>
